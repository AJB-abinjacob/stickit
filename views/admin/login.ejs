<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("../partials/admin-head") %>
    <script defer src="/js/show-msg.js"></script>
  </head>
  <body>
    <main class="flex justify-center items-center h-screen w-full">
      <div
        class="bg-black w-96 lg:w-1/3 h-min px-10 mx-5 py-5 drop-shadow-[8px_8px_rgb(45,212,191)]"
      >
        <h1 class="text-white text-center font-bold text-3xl">Stickit Admin</h1>
        <form action="/admin/login" method="post">
          <div class="mt-4">
            <label for="email" class="text-white block mb-1">Email</label>
            <input
              type="email"
              required
              id="email"
              name="email"
              placeholder="email@example.com"
              class="bg-white border block w-full p-1 px-3 focus:outline-none"
            />
          </div>
          <div class="mt-4">
            <label for="password" class="text-white block mb-1">Password</label>
            <input
              type="password"
              required
              id="password"
              name="password"
              placeholder="********"
              class="bg-white border block w-full p-1 px-3 focus:outline-none"
            />
          </div>
          <div class="flex justify-center items-center">
            <button
              type="submit"
              class="bg-white mt-5 px-5 py-2 font-semibold uppercase hover:bg-turquoise transition-all"
            >
              LOGIN
            </button>
          </div>
        </form>
      </div>
    </main>
    <% if(message[0]){ %>
    <!-- errorMsgBox -->
    <div
      id="errorMsgBox"
      class="animate-slide-down transition-all w-full fixed top-4 left-0 right-0 flex items-center justify-center"
    >
      <div
        class="text-center bg-lightRed rounded-lg text-darkRed lg:text-xl py-5 px-8 mx-10 max-w-lg"
      >
        <%= message[0] %>
      </div>
    </div>
    <% } %>
  </body>
</html>

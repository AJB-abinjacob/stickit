<div class="flex flex-col bg-white rounded-lg justify-between border mt-10">
  <div class="overflow-x-auto sm:-mx-6 lg:-mx-8">
    <div class="inline-block min-w-full sm:px-6 lg:px-8">
      <div class="overflow-x-auto">
        <table class="min-w-full">
          <thead class="bg-lightGray">
            <tr>
              <th
                scope="col"
                class="text-xs font-semibold text-darkGray px-6 py-2 text-left"
              >
                #
              </th>
              <th
                scope="col"
                class="text-xs font-semibold text-darkGray px-6 py-2 text-left"
              >
                PRODUCT NAME
              </th>
              <th
                scope="col"
                class="text-xs font-semibold text-darkGray px-6 py-2 text-left"
              >
                QUANTITY
              </th>
              <th
                scope="col"
                class="text-xs font-semibold text-darkGray px-6 py-2 text-left"
              >
                PRICE
              </th>
            </tr>
          </thead>
          <tbody>
            <% order.items.forEach( (item,index) => { %>
            <tr class="border-t">
              <td class="text-sm text-darkGray px-6 py-4 whitespace-nowrap">
                <%= index+1 %>
              </td>
              <td
                class="text-sm flex items-center gap-2 capitalize text-darkGray px-6 py-4 whitespace-nowrap"
              >
                <img src="<%= item.imgUrl %>" alt="" class="w-8" />
                <%= item.productName %>
              </td>
              <td class="text-sm text-darkGray px-6 py-4 whitespace-nowrap">
                <%= item.quantity %>
              </td>
              <td
                class="text-sm text-darkGray font-semibold px-6 py-4 whitespace-nowrap"
              >
                &#8377;<%= item.price %>.00
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

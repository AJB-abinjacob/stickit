<div
  id="modal"
  class="hidden w-full bg-black bg-opacity-30 absolute inset-0 justify-center overflow-y-auto"
>
  <div class="bg-white p-10 h-fit rounded-lg lg:w-1/2 my-10">
    <h1 class="font-semibold text-2xl">Add Product</h1>

    <form
      action="/admin/add-product"
      method="post"
      enctype="multipart/form-data"
      class="w-full mt-5 form"
    >
      <!-- images simple upload -->
      <div class="mt-4">
        <label for="productImages" class="block mb-1">Product Images</label>
        <input
          type="file"
          multiple
          required
          id="productImages"
          name="productImages"
          class="bg-white text-darkGray border rounded-lg block w-full p-2.5"
        />
      </div>
      <small class="text-darkGray"
        >(Only *.jpg, *.jpeg, *.png and *.webp images are accepted)</small
      >

      <!-- image upload (design) -->

      <!-- product title -->
      <div class="mt-4">
        <label for="productTitle" class="block mb-1">Product Title</label>
        <input
          type="text"
          id="productTitle"
          name="productTitle"
          placeholder="Product title"
          class="bg-white text-darkGray border rounded-lg block w-full p-2.5"
        />
      </div>
      <!-- product category -->
      <div class="mt-3">
        <label for="productCategory" class="block mb-1">Product Category</label>
        <select
          id="productCategory"
          name="productCategory"
          class="bg-white border text-darkGray rounded-lg block w-full p-2.5"
        >
          <option selected hidden>Choose a category</option>
          <option value="United States">United States</option>
          <option value="Canada">Canada</option>
          <option value="France">France</option>
          <option value="Germany">Germany</option>
        </select>
      </div>
      <!-- product price -->
      <div class="mt-4">
        <label for="productPrice" class="block mb-1">Product Price</label>
        <input
          type="number"
          id="productPrice"
          name="productPrice"
          placeholder="Product price"
          class="bg-white text-darkGray border rounded-lg block w-full p-2.5"
        />
      </div>
      <!-- Sale price -->
      <div class="mt-4">
        <label for="salePrice" class="block mb-1">Sale Price</label>
        <input
          type="number"
          id="salePrice"
          name="salePrice"
          placeholder="Sale price"
          class="bg-white text-darkGray border rounded-lg block w-full p-2.5"
        />
      </div>
      <!-- stock -->
      <div class="mt-4">
        <label for="stock" class="block mb-1">Stock</label>
        <input
          type="number"
          id="stock"
          name="stock"
          placeholder="Stock"
          class="bg-white text-darkGray border rounded-lg block w-full p-2.5"
        />
      </div>
      <!-- BUTTONS -->
      <div class="mt-5 flex justify-end gap-3">
        <button
          type="submit"
          class="bg-turquoise px-5 py-2 font-semibold uppercase rounded-lg hover:bg-black hover:text-turquoise"
        >
          ADD PRODUCT
        </button>
        <button
          id="cancelModalBtn"
          type="reset"
          class="text-darkRed px-5 py-2 font-semibold uppercase rounded-lg hover:underline"
        >
          CANCEL
        </button>

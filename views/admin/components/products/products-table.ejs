<div class="flex flex-col bg-white rounded-lg justify-between border mt-5">
  <div class="overflow-x-auto sm:-mx-6 lg:-mx-8">
    <div class="inline-block min-w-full sm:px-6 lg:px-8">
      <div class="overflow-x-auto">
        <table class="min-w-full">
          <thead class="bg-lightGray border-b">
            <tr>
              <th
                scope="col"
                class="text-xs font-semibold text-darkGray px-6 py-2 text-left"
              >
                PRODUCT
              </th>
              <th
                scope="col"
                class="text-xs font-semibold text-darkGray px-6 py-2 text-left"
              >
                CATEGORY
              </th>
              <th
                scope="col"
                class="text-xs font-semibold text-darkGray px-6 py-2 text-left"
              >
                PRICE
              </th>
              <th
                scope="col"
                class="text-xs font-semibold text-darkGray px-6 py-2 text-left"
              >
                STOCK
              </th>
              <th
                scope="col"
                class="text-xs font-semibold text-darkGray px-6 py-2 text-center"
              >
                STATUS
              </th>
              <th
                scope="col"
                class="text-xs font-semibold text-darkGray px-6 py-2 text-center"
              >
                DISCOUNT
              </th>
              <th
                scope="col"
                class="text-xs font-semibold text-darkGray px-6 py-2 text-center"
              >
                ACTIVE
              </th>
              <th
                scope="col"
                class="text-xs font-semibold text-darkGray px-6 py-2 text-center"
              >
                ACTIONS
              </th>
            </tr>
          </thead>
          <tbody>
            <tr class="border-b">
              <td
                class="text-sm flex items-center gap-2 text-darkGray px-6 py-4 whitespace-nowrap"
              >
                <img
                  src="/images/favicons/apple-touch-icon.png"
                  alt=""
                  class="w-8"
                />
                Stay Focussed Sticker
              </td>
              <td class="text-sm text-darkGray px-6 py-4 whitespace-nowrap">
                Motivational
              </td>
              <td
                class="text-sm text-darkGray font-semibold px-6 py-4 whitespace-nowrap"
              >
                &#8377;29.00
              </td>
              <td
                class="text-sm text-darkGray font-semibold px-6 py-4 whitespace-nowrap"
              >
                100
              </td>
              <td class="text-xs px-6 py-4 whitespace-nowrap text-center">
                <span
                  class="text-xs text-darkRed bg-lightRed py-2 px-3 rounded-lg"
                  >OUT OF STOCK</span
                >
              </td>
              <td
                class="text-sm font-semibold text-darkGray px-6 py-4 whitespace-nowrap text-center"
              >
                20%
              </td>
              <td
                class="text-sm text-darkGray px-6 py-4 whitespace-nowrap text-center"
              >
                <%- include("../check") %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-xl text-center">
                <a href=""
                  ><i class="bi bi-pencil-square text-darkGreen"></i
                ></a>
                <a href="">
                  <i class="bi bi-trash text-darkRed ml-3"></i>
                </a>
              </td>
            </tr>
          </tbody>
        </table>
        <%- include("../pagination") %>
      </div>
    </div>
  </div>
</div>

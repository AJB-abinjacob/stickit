<div
  id="modal"
  class="hidden w-full bg-black bg-opacity-30 absolute inset-0 justify-center items-center overflow-y-auto"
>
  <div class="bg-white p-10 h-fit rounded-lg lg:w-1/2">
    <h1 class="font-semibold text-2xl">Add Banner</h1>

    <form action="/admin/coupons/add-coupon" method="post" class="w-full mt-5">
      <!-- coupon code -->
      <div class="mt-4">
        <label for="imageTitle" class="block mb-1">Image Title</label>
        <input
          type="text"
          required
          id="imageTitle"
          name="imageTitle"
          placeholder="Girl holding a laptop"
          class="bg-white text-darkGray border rounded-lg block w-full p-2.5"
        />
      </div>
      <!-- BUTTONS -->
      <div class="mt-5 flex justify-end gap-3">
        <button
          type="submit"
          class="bg-turquoise px-5 py-2 font-semibold uppercase rounded-lg hover:bg-black hover:text-turquoise"
        >
          ADD BANNER
        </button>
        <button
          id="cancelModalBtn"
          type="reset"
          class="text-darkRed px-5 py-2 font-semibold uppercase rounded-lg hover:underline"
        >
          CANCEL
        </button>
      </div>
    </form>
  </div>
</div>
